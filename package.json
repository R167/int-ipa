{
  "name": "int-ipa",
  "author": "Winston Durand <me@winstondurand.com>",
  "description": "An interactive tool for learning IPA transcription",
  "license": "MIT",
  "version": "0.5.3",
  "repository": "github:R167/int-ipa",
  "homepage": ".",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.11.3",
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router": "^5.1.11",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "@yarnpkg/pnpify": "^2.4.0",
    "clsx": "^1.1.1",
    "escape-string-regexp": "^4.0.0",
    "eslint": "^7.20.0",
    "eslint-config-react-app": "^6.0.0",
    "js-base64": "^3.6.0",
    "markdown-to-jsx": "^7.1.0",
    "react": "^17.0.1",
    "react-async-hook": "^3.6.2",
    "react-dom": "^17.0.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "smoothscroll-polyfill": "^0.4.4",
    "superstruct": "^0.13.0",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4",
    "yaml": "^1.10.0",
    "zbase32": "^1.0.3"
  },
  "scripts": {
    "release": "(git show :CHANGELOG.md | grep \"## v$npm_package_version\" || (echo \"Missing v$npm_package_version in changelog!\" && exit 100)) && yarn prettier --check ./src && yarn lint-ci && yarn test --watchAll=false && echo \"Pushing $npm_package_version to origin...\" && exit 2 && git push --follow-tags",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint ./src",
    "lint-ci": "yarn lint --max-warnings=0",
    "fix": "eslint --fix ./src",
    "analyze": "source-map-explorer 'build/static/js/*.js'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "sort-imports": [
        "warn",
        {
          "ignoreDeclarationSort": true
        }
      ],
      "react-hooks/exhaustive-deps": [
        "warn",
        {
          "additionalHooks": "(useAsync|useAsyncCallback)"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      "last 2 year and last 2 major versions and >0.1%",
      ">1%",
      "not dead",
      "not op_mini all",
      "not ie 11 and supports css-sticky"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "latest",
    "eslint-plugin-flowtype": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "isomorphic-webcrypto": "^2.3.6",
    "path": "^0.12.7",
    "prettier": "^2.2.0",
    "source-map-explorer": "^2.5.0"
  }
}
